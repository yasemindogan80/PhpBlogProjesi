            </tr>
            <tr>
                <th>Image</th>
                <td>{{ blog.image }}</td>
            </tr>
            <tr>
                <th>Star</th>
                <td>{{ blog.star }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ blog.address }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ blog.phone }}</td>
            </tr>
            <tr>
                <th>Fax</th>
                <td>{{ blog.fax }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ blog.email }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ blog.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ blog.country }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ blog.location }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ blog.status }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ blog.createdAt ? blog.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ blog.updatedAt ? blog.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Detail</th>
                <td>{{ blog.detail |raw  }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ blog.userid }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_blog_index') }}">back to list</a>

    <a href="{{ path('user_blog_edit', {'id': blog.id}) }}">edit</a>

