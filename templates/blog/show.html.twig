{% block title %}Blog index{% endblock %}

{% block body %}

    <section class="blog-post-area section-margin">
        <div class="container">
            <div class="row">

                {{ include('user/usermenu.html.twig') }}

                <div class="col-lg-8">
                    <h3>User Blog Detail</h3>
                    <hr>
                <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Keywords</th>
                <td>{{ blog.keywords }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ blog.description }}</td>
            </tr>
            <tr>
                <th>Blog Detail</th>
