{% extends 'homebase.html.twig' %}

 {% block title %}{{setting[0].title}}{% endblock %}
 {% block keywords %}{{setting[0].keywords}}{% endblock %}
 {% block description %}{{setting[0].description}}{% endblock %}


{% block slider %}  {% include('home/slider.html.twig') %}  {% endblock %}

 {% block body %}
     <!--================ Start Blog Post Area =================-->

     <section>
         <div class="container">
             <div class="owl-carousel owl-theme blog-slider">
                 {% for blog in blogs %}
                     <div class="card blog__slide text-center">
                         <a href="{{ path('blog_show',{'id': blog.id}) }}">
                             <div class="blog__slide__img">
                                 <img class="card-img rounded-0" src="{{ asset('uploads/images/') ~ blog.image }}"
                                      height="170" alt="">
                             </div>
                             <div class="blog__slide__content">
                                 <a class="blog__slide__label"
                                    href="{{ path('blog_show', {'id': blog.id}) }}">{{ blog.title }}</a>
                                 <h3><a href="{{ path('blog_show', {'id': blog.id}) }}">{{ blog.description }}</a></h3>

                             </div>
                         </a>
                     </div>
                 {% endfor %}
             </div>
         </div>
     </section>



     <section class="blog-post-area section-margin mt-4">
     <div class="container">
         <div class="row">
         {% for blog in blogs %}
         <div class="col-12 col-md-6">
             <div class="thumb">
                 <img class="card-img rounded-0" src="{{ asset('uploads/images/') ~ blog.image }}">
             </div><br><br>
         </div>
         <div class="col-12 col-md-6">
             <div class="big-post-content text-center mb-50">
                 <div class="details mt-20">
                     <h3 >{{ blog.title }}</h3>
                     <ul class="thumb-info">
                         <li class="ti-notepad">{{ blog.createdAt | date }}</li>
                     </ul>
                     <p>{{ blog.detail | raw }}</p>
                     <a class="button" href="{{ path('blog_show', {'id': blog.id}) }}">Read More <i class="ti-arrow-right"></i></a>
                 </div>
             </div>
         </div>
         {% endfor %}
         </div>
     </div>
     </section>

 {% endblock %}