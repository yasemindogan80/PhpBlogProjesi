{% extends 'homebase.html.twig' %}
 {% block title %} Contact | {{ setting[0].title }}{% endblock %}
 {% block keywords %}{{ setting[0].keywords }}{% endblock %}
 {% block description %}{{ setting[0].description }}{% endblock %}
{% block body %}


    <!-- ================ contact section start ================= -->
    <section class="section-margin--small section-margin">
        <div class="container">
            <div class="d-none d-sm-block mb-5 pb-4">


                <div class="row">
                    <div class="col-lg-6">
                        <h2>Contact Form </h2>
                        <hr>

                        <div class="media-body">


                            {{ include('messages.html.twig') }}
                            <form name="messages" class="form-contact contact_form" method="post" id="contactForm"
                                         novalidate="novalidate">
                                <div class=" text-center text-md-left mt-3">
                                    <div >
                                        <div class="form-group">
                                            <input class="form-control" id="messages_name" name="messages[name]" type="text"
                                                   placeholder="Enter your name">
                                        </div>
                                      <div class="form-group">
                                                <input class="form-control" id="messages_email" name="messages[email]"
                                                       type="email" placeholder="Enter email address">
                                        </div>
                                        <div class="form-group">
                                            <input class="form-control" id="messages_subject" name="messages[subject]"
                                                   maxlength="75" type="text" placeholder="Enter Subject">
                                        </div>

                                        <div >
                                            <div class="form-group">
                                            <textarea class="form-control different-control w-100" id="messages_message"
                                                      name="messages[message]" maxlength="255" cols="30" rows="5"
                                                      placeholder="Enter Message"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group text-center text-md-center mt-3">
                                    <input type="hidden" name="token" value="{{ csrf_token('form-message') }}"/>
                                    <button type="submit" class="button button--active button-contactForm">Send Message
                                    </button>
                                </div>
                            </form>



                        </div>

                    </div>
                    <div class="col-lg-6" >
                        <h2>Contact Ä°nformation</h2>
                        <hr>
                        {{ setting[0].contact | raw }}
                    </div>
                </div>
            </div>
    </section>
    <!-- ================ contact section end ================= -->





{% endblock %}
